<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quocdat.mysieuthi_mobile.DoiMatKhau_Activity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtmkcu"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:hint="Nhập mật khẩu cũ"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edtmk1"
        android:layout_below="@+id/edtmkcu"
        android:layout_centerHorizontal="true"
        android:hint="Nhập mật khẩu mới"
        android:layout_marginTop="57dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edtmk2"
        android:hint="Nhập lại mật khẩu mới"
        android:layout_below="@+id/edtmk1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:id="@+id/btnXacNhan"
        android:layout_alignTop="@+id/btnHuy"
        android:layout_alignRight="@+id/edtmk2"
        android:layout_alignEnd="@+id/edtmk2" />


    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:id="@+id/btnHuy"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/edtmk2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
