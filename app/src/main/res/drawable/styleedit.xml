<?xml version="1.0" encoding="utf-8"?>
<inset android:insetTop="1px" android:insetBottom="1px"  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners  android:bottomLeftRadius="4dip"
                    android:bottomRightRadius="4dip"
                    android:topLeftRadius="0dip"
                    android:topRightRadius="0dip"  />
                <gradient android:startColor="#ffffff" android:endColor="#f1042a" android:angle="270" />
                <stroke android:width="2px" android:color="#E6E6E6" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners  android:bottomLeftRadius="4dip"
                    android:bottomRightRadius="4dip"
                    android:topLeftRadius="4dip"
                    android:topRightRadius="4dip" />
                <solid android:color="#FFFFFFFF" />
                <stroke android:width="2px" android:color="#d9d5d5" />
                <padding
                    android:bottom="7dip"
                    android:left="7dip"
                    android:right="7dip"
                    android:top="7dip" />

            </shape>
        </item>
    </selector>

</inset>
